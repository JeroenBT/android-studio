<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jeroen.braintrainer.OpgaveActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 + 1"
        android:id="@+id/textViewSom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="30S"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewScore"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:text="0/0" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewScore"
        android:id="@+id/gridAntwoorden"
        android:orientation="horizontal"
        android:columnCount="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/button"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="checkUitkomst"
            android:layout_margin="45dp"
            android:background="#cd412e" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/button1"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="checkUitkomst"
            android:layout_margin="45dp"
            android:background="#dcdb57" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/button2"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="checkUitkomst"
            android:layout_margin="45dp"
            android:background="#6a9b2e" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/button3"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="checkUitkomst"
            android:layout_margin="45dp"
            android:background="#5252ca" />
    </GridLayout>

</RelativeLayout>
